<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table table-striped">

          <tbody>
              <tr>
                <td><%= link_to book_path(@book.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <% end %><br>
                  <%=link_to user_path(@user.id) do %>
                    <%= @book.user.name %>
                  <% end %></td>
                <td><%= link_to book_path(@book.id) do %>
                      <%= @book.title %>
                    <% end %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><button class="btn btn-success" type="button">
                    <%= link_to "Edit", edit_book_path(@book), class: "text-white"%></button></td>
                <td><button class="btn btn-danger" type="button">
                    <%= link_to "Destroy", book_path(@book), method: :delete, class: "text-white" %></button></td>
                <% end %>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>