 <h1>New book</h1>

  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Oinion</h4>
    <%= f.text_field :body %><br>

    <%= f.submit 'Create Book' %>

  <% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
   <p><%= image_tag book.user.get_profile_image(100,100) %></p>
   <%= link_to book_path(book.id) do %>
   <p><%= book.title %></p>
   <% end %>
   <p><%= book.body %></p>
  </div>
<% end %>