<%= render 'users/user', user: @user %>
<%= render 'books/book', book: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to book_path(book.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %></td>
                <td><%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>