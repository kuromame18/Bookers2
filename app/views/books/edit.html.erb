<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Opinion</h5>
  <%= f.text_field :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to book_path(@book.id) do %>
    <p>Show</p>
  <% end %>
  <%= link_to books_path do %>
    <p>Back</p>
  <% end %>


<% end %>
