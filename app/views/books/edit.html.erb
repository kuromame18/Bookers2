<body>

  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
        <h5>Name</h5>
        <%= f.text_field :title %>

        <h5>Opinion</h5>
        <%= f.text_field :body %>

        <p><%= f.submit 'Update Book' %></p>

        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</body>


<% end %>
