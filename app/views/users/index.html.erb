<%= render 'users/user', user: @user %>
<%= render 'books/book', book: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to user_path(user.id) do %>
                      Show
                    <% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
