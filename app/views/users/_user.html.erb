<div>
  <%= flash[:notice] %>
</div>
<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>
<p>name<%= user.name %></p>
<p>introduction<%= user.introduction %></p>
<% if user == current_user %>
  <%= link_to edit_user_path(user) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
<% end %>